<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('../../head/head.ejs') -%>

  </nav>

      <!-- partial -->
      <div class="container">

        <div class="col-sm-6 col-sm-offset-3">
        
            <h1><span class="fa fa-sign-in"></span> Signup</h1>
        
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>
        
            <!-- LOGIN FORM -->
            <form action="/add-account" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <div class="form-group">
                  <label>Role</label>
                
                  <select id="role" name="role" class="form-control" style="border:1px solid;outline:none">
                    <option value="admin">Admin</option>
                    <option value="user">User</option>
                    <option value="guest">Guest</option>
                  
                  </select>
              </div>
        
                <button onclick=" return create('Account successfully created')" type="submit" class="btn btn-warning btn-lg" style="font-size: 16px;">Add new Account</button>
            </form>
        
            <hr>
        
        
        </div>
        
        </div>

    <!-- page-body-wrapper ends -->
  </div>

  <script src="/static/js/setting/confirmAccount.js"></script>

  <link rel="stylesheet" href="/static/css/setting/addAccount.css">

  <!-- plugins:js -->

</body>

</html>

